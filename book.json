{
    "plugins": [
        "sharing",
        "lunr",
        "disqus",
        "forkmegithub",
        "ga",
        "github-buttons"
    ],
    "root": "./doc/",
    "pluginsConfig": {
        "sharing": {
            "facebook": true,
            "twitter": true,
            "google": true,
            "weibo": true,
            "instapaper": true,
            "vk": true,
            "all": [
                "facebook",
                "google",
                "twitter",
                "weibo",
                "instapaper"
            ]
        },
        "lunr": {
            "maxIndexSize": 1000000,
            "ignoreSpecialCharacters": true
        },
        "disqus": {
            "shortName": "exceptions4c",
            "useIdentifier": true
        },
        "forkmegithub": {
            "url": "https://github.com/guillermocalvo/exceptions4c/",
            "color": "red"
        },
        "ga": {
            "token": "UA-61670496-1",
            "configuration": "auto"
        },
        "github-buttons": {
            "repo": "guillermocalvo/exceptions4c",
            "types": [
                "star",
                "watch",
                "fork",
                "follow"
            ],
            "size": "large"
        }
    },
    "author": "Guillermo Calvo",
    "title": "Exceptions4c",
    "language": "en",
    "links": {
        "sidebar": {
            "Project Website": "http://guillermo.in/exceptions4c/",
            "Source Code": "https://github.com/guillermocalvo/exceptions4c/"
        }
    },
    "gitbook": ">= 3.0.0",
    "description": "An exception handling framework for C",
    "direction": "ltr",
    "structure": {
        "readme": "README.md",
        "summary": "SUMMARY.md",
        "glossary": "GLOSSARY.md"
    },
    "pdf": {
        "pageNumbers": true,
        "fontSize": 12,
        "fontFamily": "Arial",
        "paperSize": "a4",
        "margin": {
            "top": 56,
            "bottom": 56,
            "right": 62,
            "left": 62
        }
    }
}
